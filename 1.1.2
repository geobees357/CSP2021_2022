import turtle as trtl
import random as rnd

painter = trtl.Turtle()

def drawTree(scale, colrOne, colrTwo):
  painter.pendown()
  painter.pencolor(colrTwo)
  painter.forward(10 * scale)
  painter.left(90)
  painter.forward(25 * scale)
  painter.left(90)
  painter.penup()
  painter.forward(5 * scale)
  painter.right(180)
  painter.pendown()
  painter.pencolor(colrOne)
  painter.fillcolor(colrOne)
  painter.begin_fill()
  painter.circle(25 * scale, 360, 7)
  painter.end_fill()
  painter.penup()
  painter.right(180)
  painter.forward(5 * scale)
  painter.pendown()
  painter.pencolor(colrTwo)
  painter.left(90)
  painter.forward(25 * scale)
  painter.left(90)
  
def moveDir(dirr, stpNum):
  if dirr == 1:
    painter.penup()
    painter.left(90)
    painter.forward(25 * stpNum)
    painter.right(90)
    painter.pendown()
  elif dirr == 2:
    painter.penup()
    painter.left(0)
    painter.forward(25 * stpNum)
    painter.right(0)
    painter.pendown()
  elif dirr == 3:
    painter.penup()
    painter.left(-90)
    painter.forward(25 * stpNum)
    painter.right(-90)
    painter.pendown()
  elif dirr == 4:
    painter.penup()
    painter.left(-180)
    painter.forward(25 * stpNum)
    painter.right(-180)
    painter.pendown()

def drawMove(scle, sttNum, dirc, clr1, clr2):
  drawTree(scle, clr1, clr2)
  moveDir(dirc, sttNum)
  
def presetOne(crldrw1, crldrw2):
  loopX = 0
  loopY = 0
  while loopY < 10:
    while loopX < 9:
      drawMove(0.5, 1.5, 2, crldrw1, crldrw2)
      loopX += 1
    loopY += 1
    loopX = 0
    painter.penup()
    painter.goto(-150, -200 + (loopY * 40))
    
def presetTwo(crldrw1, crldrw2):
  painter.penup()
  painter.goto(-150, 180)
  loopY = 0
  loopX = 0
  while loopY < 10:
    while loopX < 12:
      drawMove(0.5, rnd.randint(-1, 3), 2, crldrw1, crldrw2)
      loopX += 1
    painter.penup()
    loopY += 1
    loopX = 0
    painter.goto(-150, 180 - (loopY * 40))
    
def presetThree(crldrw1, crldrw2):
  painter.penup()
  painter.pensize(5)
  loopY = 0
  loopX = 0
  while loopY < 10:
    while loopX < 9:
      drawMove(0.5, 1.5, 2, crldrw1, crldrw2)
      loopX += 1
    loopY += 1
    loopX = 0
    painter.penup()
    painter.goto(-150, -200 + (loopY * 40))

